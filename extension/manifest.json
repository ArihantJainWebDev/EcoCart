{
  "manifest_version": 3,
  "name": "EcoCart",
  "version": "1.0",
  "description": "Helps you shop sustainably on Flipkart and Amazon.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://www.amazon.in/*",
    "https://www.flipkart.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.in/*", "https://www.flipkart.com/*"],
      "js": ["content.js"]
    }
  ]
}